<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:animateLayoutChanges="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp">

        <TextView
            android:id="@+id/item_kanji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/item_on_yomi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/item_kanji"
            android:layout_toRightOf="@+id/item_kanji"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_kun_yomi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_on_yomi"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/item_kanji"
            android:layout_toRightOf="@+id/item_kanji"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_kanji"
            android:layout_margin="10dp"
            android:maxLines="2"
            android:textColor="#000"
            android:textSize="12sp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>