<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:animateLayoutChanges="true"
        android:background="#FFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF">

            <TextView
                android:id="@+id/item_kanji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/mogul_avanti"
                android:textColor="@color/colorPrimary"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/item_on_yomi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/item_kanji"
                android:layout_toRightOf="@+id/item_kanji"
                android:fontFamily="@font/mogul_avanti"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_kun_yomi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_on_yomi"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/item_kanji"
                android:layout_toRightOf="@+id/item_kanji"
                android:fontFamily="@font/mogul_avanti"
                android:gravity="center"
                android:maxLines="1"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_kanji"
                android:layout_margin="10dp"
                android:layout_toEndOf="@+id/item_kanji"
                android:layout_toRightOf="@+id/item_kanji"
                android:fontFamily="@font/mogul_avanti"
                android:maxLines="2"
                android:textColor="#000"
                android:textSize="12sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>